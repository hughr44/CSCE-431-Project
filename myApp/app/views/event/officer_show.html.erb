<div class="main">
  <div class="container">
    <h1 class="pt-2">Recent Events</h1>
    <h5>You are logged in as: <%= @logged_in_user.email%>, <%= @logged_in_user.permissionLevel%> </h5>
    <ul>
      <% @events.each do |e| %>
        <div class="row border-bottom py-4">
          <div class="col-lg-6 col-12">
            <img class="img-fluid" src=<%= e.eventImage %> width=40%>
          </div>
          <div class="col-lg-4 col-12">
            <h4><%= e.eventName %></h4>
            <p><%= e.eventDescription %></p>
          </div>
          <div class="col-lg-2 col-12">
            <%= link_to 'Edit', edit_event_path(e)%>
            <%= button_to 'delete this event',{controller: :event, action: 'destroy', id: e.id}, method: :delete , url: '/event/'+e.id.to_s%>
          </div>
        </div>
      <% end %>
    </ul>
    <h2>Create an event!</h2>
    <%= form_with model: @user, class: "p-2" do |f| %>
      <div class="row form-group">
        <label class="col-6">Event name:</label>
        <%= f.text_field :eventName, class: "col-6 form-control" %>
      </div>
      
      <div class="row form-group">
        <label class="col-6">Event description:</label>
        <%= f.text_field :eventDescription, class: "col-6 form-control" %>
      </div>
      
      <div class="row form-group">
        <label class="col-6">Event Image(link):</label>
        <%= f.text_field :eventImage, class: "col-6 form-control" %>
      </div>
      
      <div class="row">
        <div class="col-8"></div>
        <%= f.submit "Create", class: "col-4 btn btn-primary" %>
      </div>
    <% end %>
        
    <p><%= link_to 'Officer home', '/officer'%></p>
  </div>
</div>


